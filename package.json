    "@openzeppelin/contracts": "^5.0.2",
    "@types/moment": "^2.13.0",
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "connect-pg-simple": "^9.0.1",
    "connect-redis": "^7.1.1",
    "connect-typeorm": "^2.0.0",
